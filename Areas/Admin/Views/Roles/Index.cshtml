@model IEnumerable<AppRole>

<a asp-action="Create" class="btn btn-primary">Create Role</a>
<hr>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th style="width: 125px;"></th>
    </tr>
    @if(Model.Count() == 0){
        <tr><td colspan="4" class="text-center">No Role</td></tr>
    }
    @foreach(var role in Model){
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>User List</td>
            <td>
                <a asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>
                <form asp-action="Delete" method="post" onsubmit="return confirm('Emin Misiniz?')" style="display: inline-block;">
                    <input type="hidden" name="id" value="@role.Id">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>